<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:views="clr-namespace:AssinaturaDigital.Views" 
             NavigationPage.HasNavigationBar="false"
             x:Class="AssinaturaDigital.Views.RGOrientationPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="20,40">
                <Label Margin="0,0,0,40" 
                       Text="{Binding Title}" 
                       Style="{StaticResource title}" />
                <Label Margin="0,0,0,20" 
                       Text="Tire 2 fotos do documento (frente e verso)" 
                       Style="{StaticResource mediumLabel}" />
                <Label Margin="0,0,0,20" 
                       Text="O aparelho e o documento devem estar sempre na mesma orientação no momento da foto (seja na vertical ou na horizontal)" 
                       Style="{StaticResource mediumLabel}" />
                <Label Margin="0,0,0,40" 
                       Text="Certifique-se que a foto esteja com boa nitidez e luminosidade adequada" 
                       Style="{StaticResource mediumLabel}" />
                <Button Text="OK! ENTENDI!" 
                        Command="{Binding GoFowardCommand}" 
                        Style="{StaticResource greenButton}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

